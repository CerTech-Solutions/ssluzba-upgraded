<Window x:Class="GUI.AddProfessorToSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:ns="clr-namespace:GUI.Localization"
        mc:Ignorable="d"
        Title="{ns:Loc Add professor}"
        Height="450" Width="400"
        ResizeMode="NoResize">
    <Grid Margin="0,10,0,0">
        <ListView VerticalAlignment="Top" Margin="10,10,10,0" x:Name="listViewProfessors" Height="331">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding NameSurname}">
                        <GridViewColumnHeader IsEnabled="False" Content="{ns:Loc Professors1}"/>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="{ns:Loc Add professor}"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Height="30" Width="160" Click="AddProfessor"/>
        <Button Content="{ns:Loc Cancel}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Width="160" Margin="0,0,10,10" Click="Cancel"/>
    </Grid>
</Window>
