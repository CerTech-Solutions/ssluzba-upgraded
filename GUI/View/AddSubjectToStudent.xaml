<Window x:Class="GUI.AddSubjectToStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Add subject"
        Height="450" Width="400"
        ResizeMode="NoResize">

    <Grid Margin="0,10,0,0">
        <ListView VerticalAlignment="Top" Margin="10,10,10,0" x:Name="listViewSubjects" ItemsSource="{Binding _subjects}" Height="331">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding CodeAndName}">
                        <GridViewColumnHeader IsEnabled="False"></GridViewColumnHeader>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Add"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Height="30" Width="160" Click="AddSubject"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Width="160" Margin="0,0,10,10" Click="Cancel"/>
    </Grid>
</Window>
